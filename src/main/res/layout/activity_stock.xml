<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/cpg"
    tools:context=".StockActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="STOCK"
        android:textSize="34sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_stock_id"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:hint="Enter Stock ID"
        android:inputType="number"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_stock_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Stock Name"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_total_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Total Stock"
        android:inputType="number"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_remaining_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Remaining Stock"
        android:inputType="number"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_add_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Data"
            android:textStyle="bold" />


        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>


        <Button
            android:id="@+id/btn_show_all_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show All Data"
            android:textStyle="bold" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Delete Operation"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_delete_stock_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Stock ID to delete"
        android:inputType="number"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_delete_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Update Operation"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_update_stock_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Stock ID to update"
        android:inputType="number"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_new_total_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter New Total Stock"
        android:inputType="number"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_update_remaining_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter New Remaining Stock"
        android:inputType="number"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_update_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textStyle="bold" />


</LinearLayout>
